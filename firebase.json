{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/components/**",
        "destination": "/components/$1"
      },
      {
        "source": "/components/Servicios/**",
        "destination": "/components/Servicios/$1"
      },
      {
        "source": "/components/Procesos/**",
        "destination": "/components/Procesos/$1"
      },
      {
        "source": "/components/CentroFormacion/**",
        "destination": "/components/CentroFormacion/$1"
      },
      {
        "source": "/components/footer/**",
        "destination": "/components/footer/$1"
      }
    ]
  }
}